<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutTracker.CreateWorkoutPage"
             Shell.PresentationMode="ModalAnimated"
             xmlns:local="clr-namespace:WorkoutTracker">
  <ContentPage.BindingContext>
    <local:CreateWorkoutViewModel/>
  </ContentPage.BindingContext>
  <Grid Margin="20,40,20,50" RowDefinitions="Auto,*,Auto">
    <Label GridLayout.Row="0" Text="This is a detail page"/>
    <Button GridLayout.Row="2" Text="Finish" Command="{Binding CloseCmd}"/>
  </Grid>
</ContentPage>